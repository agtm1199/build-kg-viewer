{
  "name": "build-kg-viewer",
  "version": "0.1.0",
  "description": "Graph visualization for Apache AGE with AI-powered query generation. Companion to build-kg.",
  "repository": {
    "type": "git",
    "url": "https://github.com/agtm1199/build-kg-viewer.git"
  },
  "homepage": "https://github.com/agtm1199/build-kg-viewer",
  "author": "build-kg contributors",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "setup": "npm install && npm-run-all setup-front setup-backend",
    "setup-front": "cd frontend && npm install",
    "setup-backend": "cd backend && npm install",
    "front": "cd frontend && npm run start",
    "build-front": "cd frontend  && npm install && npm run build",
    "build-back": "cd backend  && npm install && npm run build",
    "backend": "cd backend && npm run start",
    "deploy": "npm-run-all build-front backend",
    "start": "npm-run-all --parallel backend front"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
